{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            /*
             * This is the default cargo build task,
             * but we need to provide a label for it,
             * so we can invoke it from the debug launcher.
             */
            "label": "Build (debug)",
            "type": "process",
            "command": "cargo",
            "args": ["make", "build"],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build (release)",
            "type": "process",
            "command": "cargo",
            "args": ["make", "build-release"],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "Run",
            "type": "process",
            "command": "cargo",
            "args": ["make", "run"],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "Debug (OpenOCD[Terminal])",
            "type": "process",
            "command": "cargo",
            "args": ["make", "debug"],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "Flash",
            "type": "process",
            "command": "cargo",
            "args": ["make", "flash"],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "Clean",
            "type": "process",
            "command": "cargo",
            "args": ["make", "clean"],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
    ]
}